# ===========================================
# FlowBond Ã— DANZ Venue System
# Environment Configuration
# ===========================================

# Database
DATABASE_URL=postgresql://flowbond:flowbond_secret@localhost:5432/flowbond_dev

# API Server
API_PORT=3001
API_PREFIX=api
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Web App
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# DrinkPass Configuration
DRINK_PASS_VALIDITY_HOURS=24
DRINK_PASS_CODE_LENGTH=8

# i18n
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Notifications (optional - for future integrations)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@flowbond.io

# Push Notifications (optional)
PUSH_VAPID_PUBLIC_KEY=
PUSH_VAPID_PRIVATE_KEY=

# Analytics (optional)
ANALYTICS_ENABLED=true

# Logging
LOG_LEVEL=debug
