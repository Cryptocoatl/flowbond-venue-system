{
  "name": "flowbond-venue-system",
  "version": "1.0.0",
  "description": "QR-based venue ordering system with sponsor-powered drink quests",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev:api dev:web",
    "dev:api": "pnpm --filter @flowbond/api dev",
    "dev:web": "pnpm --filter @flowbond/web dev",
    "build": "pnpm run -r build",
    "build:api": "pnpm --filter @flowbond/api build",
    "build:web": "pnpm --filter @flowbond/web build",
    "start": "pnpm run --parallel start:api start:web",
    "start:api": "pnpm --filter @flowbond/api start:prod",
    "start:web": "pnpm --filter @flowbond/web start",
    "test": "pnpm run -r test",
    "test:e2e": "pnpm --filter @flowbond/api test:e2e",
    "lint": "pnpm run -r lint",
    "format": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json}\"",
    "prisma:migrate": "pnpm --filter @flowbond/api prisma migrate dev",
    "prisma:studio": "pnpm --filter @flowbond/api prisma studio",
    "prisma:generate": "pnpm --filter @flowbond/api prisma generate",
    "seed": "pnpm --filter @flowbond/api seed",
    "generate:qr": "tsx infrastructure/scripts/generate-qr.ts",
    "clean": "pnpm run -r clean && rm -rf node_modules",
    "typecheck": "pnpm run -r typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "pnpm": {
    "overrides": {}
  }
}
